<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue_1"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/white_round_corner"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingTop="0dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pet_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/profile"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/blue_stoke_white_round_corner"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pet_profile"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:fontFamily="sans-serif-thin"
                                android:textColor="@color/black"
                                android:text="My Profile"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/perCare"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/blue_stoke_white_round_corner"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pet_care"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:fontFamily="sans-serif-thin"
                                android:textColor="@color/black"
                                android:text="Pet Care"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/aboutUs"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/blue_stoke_white_round_corner"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/about_us"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:fontFamily="sans-serif-thin"
                                android:textColor="@color/black"
                                android:text="About Us"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/moment"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/blue_stoke_white_round_corner"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/social_network"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:fontFamily="sans-serif-thin"
                                android:textColor="@color/black"
                                android:text="Moments"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/foodProduct"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/blue_stoke_white_round_corner"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pet_food_product"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:fontFamily="sans-serif-thin"
                                android:textColor="@color/black"
                                android:text="Food &amp;\nProducts"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/signOut"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/blue_stoke_white_round_corner"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/logout"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:fontFamily="sans-serif-thin"
                                android:textColor="@color/black"
                                android:text="Sign Out"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>